<h1>ユーザー詳細ページ</h1>
<h2>投稿内容</h2>
<% @user.items.each do |item| %>
  <div class="owl-carousel-show">
    <div class="tweet-box-wrapper-show">
        <div class="tweet-description-wrapper-show">
        <p class="tweet-description-subheader-show"><%= item.genre.name %></p>
        <p class="tweet-description-header-show"><%= item.title %></p>
        <p class="tweet-description-info-show"><%= item.explanation %></p>
      </div>
          </div>
  </div>
<% end %>
<h3>いいねしている投稿</h3>
<% @user.liked_items.each do |item| %>
  <div class="owl-carousel-show">
    <div class="tweet-box-wrapper-show">
      <div class="tweet-description-wrapper-show">
        <p class="tweet-description-subheader-show"><%= item.genre.name %></p>
        <p class="tweet-description-header-show"><%= item.title %></p>
        <p class="tweet-description-info-show"><%= item.explanation %></p>
      </div>
    </div>
  </div><% end %>
