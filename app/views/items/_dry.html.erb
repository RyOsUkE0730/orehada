<div class="item tweet-box-wrapper">
  <div class="img-preview">
    <%= image_tag dry.image %>
  </div>
  <div class="tweet-description-wrapper">
    <%= link_to "もっと見る", item_path(dry.id), class:"tweet-description-subheader" %>
    <p class="tweet-description-header"><%= dry.title %></p>
    <p class="tweet-description-info"><%= dry.explanation %></p>
  </div>
</div>